        </LinearLayout>

        <ImageView
            android:id="@+id/cup"
            android:layout_width="58dp"
            android:layout_height="65dp"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/ic_baseline_liquor_24" />


    </LinearLayout>


</androidx.cardview.widget.CardView>